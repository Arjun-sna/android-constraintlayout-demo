<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <in.arjunsn.constraintlayoutdemo.RoundedImageView
      android:id="@+id/profile_picture"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:src="@drawable/kungfupanda"
      android:layout_marginRight="10dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/profile_name"
      app:layout_constraintBottom_toBottomOf="parent"
      />
  <TextView
      android:id="@+id/profile_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Tom and Jerry"
      app:layout_constraintLeft_toRightOf="@+id/profile_picture"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toTopOf="@+id/timestamp"
      app:layout_constraintVertical_chainStyle="packed"
      android:textColor="@android:color/black"
      android:textSize="20sp"
      />
  <TextView
      android:id="@+id/timestamp"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="May 24 2017 5:45 PM"
      android:textColor="@android:color/darker_gray"
      android:textSize="14sp"
      app:layout_constraintLeft_toLeftOf="@+id/profile_name"
      app:layout_constraintTop_toBottomOf="@+id/profile_name"
      app:layout_constraintBottom_toBottomOf="parent"
      />

</android.support.constraint.ConstraintLayout>